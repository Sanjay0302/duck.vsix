{
  "name": "duck-vsx",
  "displayName": "duck.vsx",
  "description": "DuckDuckGo AI Chat Extension",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:duckChatView"
  ],
  "main": "./extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "duck-chat",
          "title": "Duck Chat",
          "icon": "$(comment-discussion)"
        }
      ]
    },
    "views": {
      "duck-chat": [
        {
          "id": "duckChatView",
          "name": "Chat",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "duck-vsx.startChat",
        "title": "Start Duck Chat"
      },
      {
        "command": "duck-vsx.insertSnippet",
        "title": "Insert Code Snippet"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "dependencies": {
    "node-fetch": "^2.6.1",
    "showdown": "^2.1.0"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.96.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.16.0"
  }
}
